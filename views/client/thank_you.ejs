<%# views/public/thank_you.ejs %>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= typeof title !== 'undefined' ? title : 'Enquiry Submitted - Thank You'
      %>
    </title>

    <%# Assuming 'head' partial includes Bootstrap CSS, Font Awesome, and your
    site's custom CSS %> <%- include('../partials/head'); %> <%# Google Fonts -
    Include if your overall site uses them and they aren't in 'head' %>
    <link
      href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap"
      rel="stylesheet"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Merriweather:wght@700&display=swap"
      rel="stylesheet"
    />

    <style>
      /* You can put common page wrapper styles into your main CSS file
         linked via the 'head' partial to avoid repetition. */
      body {
        font-family: "Roboto", sans-serif;
        background-color: #f8f9fa; /* Light gray background for consistency */
        color: #333;
        line-height: 1.6;
        display: flex; /* For centering content and sticky footer */
        flex-direction: column; /* For sticky footer */
        min-height: 100vh; /* For sticky footer */
      }

      .thank-you-page-wrapper {
        /* Similar to inquiry-page-wrapper */
        padding-top: 40px; /* More space below navbar */
        padding-bottom: 60px; /* More space above footer */
        text-align: center;
        flex-grow: 1; /* For sticky footer - allows this section to grow */
      }

      .thank-you-content {
        max-width: 600px; /* Constrain width of the thank you message block */
        margin: 0 auto; /* Center the block */
      }

      .thank-you-icon {
        font-size: 5rem; /* Large icon */
        color: #198754; /* Bootstrap success green */
        margin-bottom: 25px;
      }

      .thank-you-title {
        font-family: "Merriweather", serif;
        color: #386641; /* Dark Green, consistent with enquiry form */
        font-size: 2.2rem;
        font-weight: 700;
        margin-bottom: 15px;
      }

      .thank-you-message {
        font-size: 1.1rem;
        color: #555;
        margin-bottom: 30px;
      }

      .thank-you-home-button {
        background-color: #f4a00d; /* Your orange button color */
        color: #fff;
        padding: 10px 25px;
        border-radius: 6px;
        font-weight: 500;
        transition: background-color 0.3s ease;
      }
      .thank-you-home-button:hover {
        background-color: #e0930c;
        color: #fff;
      }
      .navbar {
        padding: 0 !important;
      }
    </style>
  </head>
  <body>
    <%# This should be your public site navbar partial %> <%-
    include('../partials/navbar'); %>

    <div class="thank-you-page-wrapper">
      <div class="container">
        <div class="thank-you-content">
          <%# You can use Font Awesome or a Bootstrap Icon here %>
          <i class="fas fa-check-circle thank-you-icon"></i>
          <%# Or, if using Bootstrap Icons: %> <%#
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="80"
            height="80"
            fill="currentColor"
            class="bi bi-check-circle-fill text-success mb-4"
            viewBox="0 0 16 16"
          >
            <path
              d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"
            />
          </svg>
          %>

          <h1 class="thank-you-title">
            <%= typeof title !== 'undefined' ? title : 'Enquiry Submitted!' %>
          </h1>

          <%# Display flash message (success_msg specifically for this page) %>
          <% if (typeof success_msg !== 'undefined' && success_msg.length > 0) {
          %> <% success_msg.forEach(function(msg) { %>
          <p class="thank-you-message"><%- msg %></p>
          <% }); %> <% } else if (typeof messages !== 'undefined' &&
          messages.success_msg && messages.success_msg.length > 0) { %> <%
          messages.success_msg.forEach(function(msg){ %>
          <p class="thank-you-message"><%- msg %></p>
          <% }); %> <% } else { %>
          <p class="thank-you-message">
            Thank you! Your message has been received. We will get back to you
            shortly.
          </p>
          <% } %>

          <a href="/" class="btn thank-you-home-button">Return to Homepage</a>
        </div>
      </div>
    </div>

    <%# This partial should include Bootstrap JS Bundle (which includes Popper)
    and any other common site-wide scripts. %> <%-
    include('../partials/footer'); %> <%- include('../partials/scripts'); %>
  </body>
</html>
