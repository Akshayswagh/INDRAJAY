<!DOCTYPE html>
<html lang="en">
  <head>
    <link rel="stylesheet" href="/css/grains&cereals.css" />
    <%- include('../partials/head'); %>
  </head>
  <body>
    <%- include('../partials/navbar'); %>

    <section class="grainssereals">
      <div class="page-container">
        <div class="page-heading">
          <h1>Grains & Cereals</h1>
          <p>
            Explore our selection of wholesome grains and cereals, packed with
            essential nutrients to support a healthy and balanced diet.
          </p>
        </div>

        <div class="products-container">
          <% if (grainsandcereals.length > 0) { %> <% grainsandcereals.forEach(grainsandcereal => { %>
          <a href="/exports/view/<%= grainsandcereal._id %>" class="product-link">
            <div class="product-card">
              <div class="product-image-container">
                <img
                  src="<%= grainsandcereal.image %>"
                  alt="<%= grainsandcereal.name %>"
                  class="product-image"
                />
              </div>
              <div class="product-info">
                <h3 class="product-name"><%= grainsandcereal.name %></h3>
                <span class="product-category"><%= grainsandcereal.category %></span>
              </div>
            </div>
          </a>
          <% }) %> <% } else { %>
          <p>No products Available in this category.</p>
          <% } %>
        </div>
      </div>
    </section>

    <%- include('../partials/footer'); %> <%- include('../partials/scripts'); %>
  </body>
</html>
