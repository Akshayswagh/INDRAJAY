<%- include('../partials/head', { title: 'Application Submitted - Indrajay Enterprises' }) %>

<style>
    /* Styles specific to the application-success page */
    .success-container {
        font-family: 'Arial', sans-serif;
        background-color: #f4f7f6;
        margin: 0; /* Body margin is handled by header/footer */
        padding: 40px 20px; /* Padding for the content area */
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: calc(100vh - 150px); /* Adjust 150px based on your header/footer height */
        text-align: center;
        color: #333;
    }
    .success-content {
        background-color: #ffffff;
        padding: 40px 50px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 90%;
    }
    .success-icon {
        font-size: 50px;
        color: #4CAF50; /* Green for success */
        margin-bottom: 20px;
    }
    .success-content h1 {
        color: #2c3e50;
        margin-bottom: 15px;
        font-size: 28px;
    }
    .success-content p {
        font-size: 16px;
        line-height: 1.6;
        margin-bottom: 25px;
    }
    .success-home-link {
        display: inline-block;
        background-color: #3498db; /* Blue */
        color: white;
        padding: 12px 25px;
        text-decoration: none;
        border-radius: 5px;
        font-weight: bold;
        transition: background-color 0.3s ease;
    }
    .success-home-link:hover {
        background-color: #2980b9;
    }
    .success-footer-note {
        margin-top: 30px;
        font-size: 14px;
        color: #7f8c8d;
    }
</style>
<%- include('../partials/navbar') %>
