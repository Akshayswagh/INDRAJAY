<div class="bg-dark border-end" id="sidebar-wrapper">
  <div class="sidebar-heading border-bottom bg-dark text-white">
    <i class="fas fa-cogs me-2"></i>Admin Panel
  </div>
  <div class="list-group list-group-flush">
    <a
      href="/admin"
      class="list-group-item list-group-item-action list-group-item-dark p-3 <%= (typeof activePage !== 'undefined' && activePage === 'dashboard') ? 'active' : '' %>"
    >
      <i class="fas fa-tachometer-alt me-2"></i>Dashboard
    </a>

    <a
      class="list-group-item list-group-item-action list-group-item-dark p-3 d-flex justify-content-between align-items-center"
      data-bs-toggle="collapse"
      href="#userSubmenu"
      role="button"
      aria-expanded="<%= (typeof activePage !== 'undefined' && (activePage === 'view_users' || activePage === 'view_vendors' || activePage === 'view_admins')) ? 'true' : 'false' %>"
      aria-controls="userSubmenu"
    >
      <span><i class="fas fa-users me-2"></i>Users</span>
      <i class="fas fa-chevron-down"></i>
    </a>
    <div
      class="collapse <%= (typeof activePage !== 'undefined' && (activePage === 'view_users' || activePage === 'view_vendors')) ? 'show' : '' %>"
      id="userSubmenu"
    >
      <a
        href="/admin/users"
        class="list-group-item list-group-item-action list-group-item-dark p-3 ps-5 <%= (typeof activePage !== 'undefined' && activePage === 'view_users') ? 'active' : '' %>"
      >
        <i class="fas fa-user-friends me-2"></i>View Users
      </a>
      <a
        href="/admin/vendors"
        class="list-group-item list-group-item-action list-group-item-dark p-3 ps-5 <%= (typeof activePage !== 'undefined' && activePage === 'view_vendors') ? 'active' : '' %>"
      >
        <i class="fas fa-store me-2"></i>View Vendors
      </a>

      <a
        href="/admin/admins"
        class="list-group-item list-group-item-action list-group-item-dark p-3 ps-5 <%= (typeof activePage !== 'undefined' && activePage === 'view_admins') ? 'active' : '' %>"
      >
        <i class="fas fa-user-shield me-2"></i>View Admins
      </a>
    </div>

    <!-- Export Submenu -->
    <a
      class="list-group-item list-group-item-action list-group-item-dark p-3 d-flex justify-content-between align-items-center"
      data-bs-toggle="collapse"
      href="#exportSubmenu"
      role="button"
      aria-expanded="<%= (typeof activePage !== 'undefined' && (activePage === 'add_export' || activePage === 'view_exports')) ? 'true' : 'false' %>"
      aria-controls="exportSubmenu"
    >
      <span><i class="fas fa-file-export me-2"></i>Exports</span>
      <i class="fas fa-chevron-down"></i>
    </a>
    <div
      class="collapse <%= (typeof activePage !== 'undefined' && (activePage === 'add_export' || activePage === 'view_exports')) ? 'show' : '' %>"
      id="exportSubmenu"
    >
      <a
        href="/admin/exports/add"
        class="list-group-item list-group-item-action list-group-item-dark p-3 ps-5 <%= (typeof activePage !== 'undefined' && activePage === 'add_export') ? 'active' : '' %>"
      >
        <i class="fas fa-plus-circle me-2"></i>Add Export
      </a>
      <a
        href="/admin/exports/"
        class="list-group-item list-group-item-action list-group-item-dark p-3 ps-5 <%= (typeof activePage !== 'undefined' && activePage === 'view_exports') ? 'active' : '' %>"
      >
        <i class="fas fa-list-alt me-2"></i>View Exports
      </a>
    </div>

    <a
      href="/admin/Industrialservices"
      class="list-group-item list-group-item-action list-group-item-dark p-3 <%= (typeof activePage !== 'undefined' && activePage === 'industrialservices') ? 'active' : '' %>"
    >
      <i class="fas fa-cog me-2"></i>Industrial Services
    </a>

    <!-- Add other main menu items here -->

    <!-- Add other main menu items here following the same pattern -->
    <!-- Example:
        <a href="/admin/settings" class="list-group-item list-group-item-action list-group-item-dark p-3 <%= (typeof activePage !== 'undefined' && activePage === 'settings') ? 'active' : '' %>">
            <i class="fas fa-cog me-2"></i>Settings
        </a>
        -->
  </div>
</div>
